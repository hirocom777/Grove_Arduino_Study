  392, 440, 392, 392, 330, 392, 392, 330,
  262, 294, 000, 262, 262, 294, 294, 330,
  330, 294, 330, 330, 440, 392, 000, 523,
  523, 392, 330, 330, 440, 440, 392, 392,
  330, 294, 262, 000
};
// 音の長さ
